apiVersion: apps/v1
kind: Deployment
metadata:
  name: website-simply
  namespace: default
  labels:
    app: website-simply
spec:
  replicas: 2
  selector:
    matchLabels:
      app: website-simply
  template:
    metadata:
      labels:
        app: website-simply
    spec:
      containers:
      - name: website-simply
        image: yashregis.azurecr.io/website-simply:latest
        imagePullPolicy: Always
        ports:
        - containerPort: 80
