apiVersion: apps/v1
kind: Deployment
metadata:
  name: website-cafe
  namespace: default
  labels:
    app: website-cafe
spec:
  replicas: 2
  selector:
    matchLabels:
      app: website-cafe
  template:
    metadata:
      labels:
        app: website-cafe
    spec:
      containers:
      - name: website-simply
        image: yashregis.azurecr.io/website-cafe:latest
        imagePullPolicy: Always
        ports:
        - containerPort: 80
